<div class="text-center">
<p id="notice"><%= notice %></p>

<h1>Rols</h1>

 <table class="table text-center table-bordered ">

  <thead>
    <tr>
      <th>Nombre</th>
      <th>User</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @rols.each do |rol| %>
      <tr>
        <td><%= rol.nombre %></td>
        <td><%= rol.users %></td>
        <td><button class="btn btn-info"><%= link_to 'Show', rol %></button>
        <button class="btn btn-success"><%= link_to 'Edit', edit_rol_path(request) %></button>
        <button class="btn btn-danger"><%= link_to 'Destroy', rol, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rol', new_rol_path %>
</div>
